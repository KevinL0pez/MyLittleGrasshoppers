<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f0f5fa"
    android:orientation="vertical"
    tools:context=".activities.ActivityRegister">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Estudiante"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewNombre"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Nombre"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtNombre"
                    android:layout_weight="3.8"
                    android:singleLine="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDocumento"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Documento"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtDocumento"
                    android:layout_marginLeft="12dp"
                    android:singleLine="true"
                    android:layout_marginRight="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewTelefono"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Telefono"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtTelefono"
                    android:layout_marginLeft="36dp"
                    android:singleLine="true"
                    android:layout_marginRight="20dp"
                    android:inputType="phone" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewEdad"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Edad"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtEdad"
                    android:layout_marginLeft="65dp"
                    android:singleLine="true"
                    android:layout_marginRight="20dp"
                    android:inputType="number"
                    android:maxLength="2"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDireccion"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Dirección"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtDireccion"
                    android:layout_marginLeft="30dp"
                    android:singleLine="true"
                    android:layout_marginRight="20dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="#E91E63"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewPrimera"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Materia"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtPrimeraMateria"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="1ra Materia"
                    android:singleLine="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp" />

                <EditText
                    android:id="@+id/txtPrimeraNotaUno"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.5"
                    android:hint="Nota"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSegunda"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Materia"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtSegundaMateria"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:hint="2da Materia"
                    android:layout_marginRight="5dp" />

                <EditText
                    android:id="@+id/txtSegundaNotaUno"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.5"
                    android:hint="Nota"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewYTercera"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Materia"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtTerceraMateria"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="3ra Materia"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp" />

                <EditText
                    android:id="@+id/txtTerceraNotaUno"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.5"
                    android:hint="Nota"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewCuarta"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Materia"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtCuartaMateria"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="4ta Nota"
                    android:singleLine="true"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp" />

                <EditText
                    android:id="@+id/txtCuartaNotaUno"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.5"
                    android:hint="Nota"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewQuinta"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Materia"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/txtQuintaMateria"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:hint="5ta Materia"
                    android:singleLine="true"
                    android:layout_marginRight="5dp" />

                <EditText
                    android:id="@+id/txtQuintaNotaUno"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1.5"
                    android:hint="Nota"
                    android:inputType="numberDecimal" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnEntrarRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:text="Registar Notas" />

                <Button
                    android:id="@+id/btnSalirRegistro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Volver al Menú" />

            </TableRow>




        </LinearLayout>

    </ScrollView>

</LinearLayout>